{
  "name": "mailcow-aliases",
  "displayName": "Mailcow Aliases",
  "version": "1.0.2",
  "description": "Generate Mailcow aliases on the fly!",
  "author": "jonah",
  "homepage": "https://github.com/jonerrr/mailow-alias-extension/",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --zip && plasmo build --target=firefox-mv2 --zip",
    "package": "plasmo package"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.9.4",
    "@mantine/hooks": "^5.9.4",
    "@plasmohq/storage": "^0.13.1",
    "@tabler/icons": "^1.117.0",
    "axios": "^1.2.1",
    "chance": "^1.1.9",
    "plasmo": "0.60.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.0",
    "@types/chance": "^1.1.3",
    "@types/chrome": "0.0.202",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "prettier": "2.7.1",
    "typescript": "4.9.3"
  },
  "manifest": {
    "permissions": [
      "tabs"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "$FIREFOX_EXT_ID"
      }
    }
  }
}
