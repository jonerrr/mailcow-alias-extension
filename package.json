{
  "name": "mailcow-aliases",
  "displayName": "Mailcow Aliases",
  "version": "2.0.0",
  "description": "Generate Mailcow aliases on the fly!",
  "author": "jonah",
  "homepage": "https://github.com/jonerrr/mailow-alias-extension/",
